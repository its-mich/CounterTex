@model CounterTexFront.Models.CambiarRolViewModel

@{
    ViewBag.Title = "Editar Rol del Usuario";
    Layout = ViewBag.Layout;
}

<div class="container mt-5 text-light bg-dark p-4 rounded shadow">
    <h2 class="mb-4 border-bottom border-secondary pb-2">
        <i class="fas fa-user-shield text-info"></i> Cambiar Rol de:
        <span style="color: #A0CCF2;" class="fw-bold">@Model.Nombre</span>
    </h2>

    @using (Html.BeginForm("EditarRol", "Administrador", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="form-group mb-3">
            <label class="text-light fw-semibold">Nombre:</label>
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control bg-secondary text-white border-light", @readonly = "readonly" })
        </div>

        <div class="form-group mb-3">
            <label class="text-light fw-semibold">Correo:</label>
            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control bg-secondary text-white border-light", @readonly = "readonly" })
        </div>

        <div class="form-group mb-3">
            <label class="text-light fw-semibold">Rol actual:</label>
            @Html.TextBoxFor(m => m.RolActual, new { @class = "form-control bg-secondary text-white border-light", @readonly = "readonly" })
        </div>

        <div class="form-group mb-4">
            <label class="text-light fw-semibold" for="NuevoRolId">Nuevo Rol:</label>
            @Html.DropDownListFor(m => m.NuevoRolId, ViewBag.Roles as List<SelectListItem>, "Seleccione nuevo Rol", new { @class = "form-control bg-dark text-white border-secondary" })
            @Html.ValidationMessageFor(m => m.NuevoRolId, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success fw-semibold">
                <i class="fas fa-save"></i> Guardar
            </button>
            <a href="@Url.Action("Index", "Administrador")" class="btn btn-outline-light fw-semibold">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </div>
    }
</div>
