@model CounterTexFront.Models.RecuperarContrasenaViewModel
@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recuperar Contraseña</h2>

@using (Html.BeginForm("RecuperarContrasena", "Administrador", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Correo)
        @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", placeholder = "Ingrese su correo electrónico" })
        @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Enviar instrucciones</button>
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info mt-3">@TempData["Mensaje"]</div>
}
