
@model List<CounterTexFront.Models.HorarioViewModel>



@{
    ViewBag.Title = "Control de Horarios";
    Layout = ViewBag.Layout;
    var nombreUsuario = ViewBag.NombreUsuario ?? User.Identity.Name ?? "Empleado";
    ViewBag.UsuarioId = Session["UsuarioId"];

}

<div class="container mt-4">
    <h2 class="mb-4 text-primary"><i class="fas fa-clock me-2"></i>Control de Horarios</h2>

    <!-- Estadísticas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Empleados</h5>
                    <p class="display-6">48</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Presentes Hoy</h5>
                    <p class="display-6">42</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Ausentes Hoy</h5>
                    <p class="display-6">6</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark mb-3 shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Atrasados Hoy</h5>
                    <p class="display-6">5</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Registros del día -->
    <h4 class="mb-3"><i class="fas fa-list-check me-2"></i>Registros de Hoy</h4>
    <div class="row" id="registroContainer"></div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Tipo</th>
                    <th>Hora</th>
                    <th>Fecha</th>
                    <th>Observaciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var horario in Model)
                {
                    <tr>
                        <td>@horario.Tipo</td>
                        <td>@horario.Hora</td>
                        <td>@horario.Fecha.ToString("yyyy-MM-dd")</td>
                        <td>@horario.Observaciones</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay horarios disponibles.</p>
    }

    @if (ViewBag.RawJson != null)
    {
        <pre>@ViewBag.RawJson</pre>
    }

