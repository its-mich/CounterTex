@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="margin-top: -10% !important">
    <div class="card w-75">
        <div class="card-header text-center">
            <h3 class="mb-4" style="margin-bottom: 0% !important">Control de Pagos</h3>
        </div>

        <div class="card-body d-flex justify-content-center align-items-center">
            <form id="horarioForm" class="formulario w-100">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="monto">Monto del Pago ($)</label>
                            <input type="number"
                                   id="monto"
                                   name="monto"
                                   class="form-control"
                                   placeholder="Ingrese el monto del pago"
                                   required />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="fecha">Fecha de Pago</label>
                            <input type="date"
                                   id="fecha"
                                   name="fecha"
                                   class="form-control"
                                   required />
                        </div>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="metodo">Método de Pago</label>
                            <select id="metodo" name="metodo" class="form-control" required>
                                <option value="efectivo">Efectivo</option>
                                <option value="tarjeta">Tarjeta de Crédito/Débito</option>
                                <option value="transferencia">Transferencia Bancaria</option>
                            </select>
                        </div>
                    </div>
                </div>

                <br />

                <div class="d-flex justify-content-center">
                    <input type="submit" id="guardarBtn" class="btn btn-primary" value="Guardar" />
                </div>
            </form>
        </div>
    </div>
</div>
