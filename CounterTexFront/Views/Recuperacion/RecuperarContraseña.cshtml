
@model CounterTexFront.Models   .RecuperarContraseñaViewModel


@{
    ViewBag.Title = "RecuperarContraseña";
}

<h2>
    <!DOCTYPE html>
    <html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>Recuperar Contraseña</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Bootstrap CSS -->
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

        <style>
            body {
                background-color: #eef1f5;
            }

            .recover-container {
                margin-top: 80px;
            }

            .recover-box {
                max-width: 450px;
                margin: auto;
                padding: 30px;
                background-color: #ffffff;
                border-radius: 10px;
                box-shadow: 0 0 15px rgba(0,0,0,0.1);
            }

            .form-control:focus {
                box-shadow: none;
                border-color: #007bff;
            }
        </style>
    </head>
    <body>
        <div class="container recover-container">
            <div class="recover-box">
                <h4 class="text-center mb-4">¿Olvidaste tu Contraseña?</h4>
                <p class="text-center">Introduce tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña.</p>

                <form action="/Cuenta/RecuperarContrasena" method="post">
                    <div class="form-group">
                        <label for="email">Correo Electrónico</label>
                        <input type="email" class="form-control" id="email" name="Email" placeholder="ejemplo@correo.com" required>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Enviar Instrucciones</button>
                </form>

                <div class="mt-3 text-center">
                    <small><a href="/Login/Login">Volver al login</a></small>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS + jQuery -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>
</html>
</h2>

