        <!-- Filtros -->
        <div class="filter-section">
            <h4 class="mb-4"><i class="fas fa-filter me-2"></i>Filtrar Prendas</h4>
            <form id="filterForm">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="garmentType" class="form-label">Tipo de Prenda</label>
                        <select class="form-select" id="garmentType">
                            <option value="">Todos</option>
                            <option value="camisa">Camisa</option>
                            <option value="pantalon">Pantalón</option>
                            <option value="vestido">Vestido</option>
                            <option value="chaqueta">Chaqueta</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="garmentStatus" class="form-label">Estado</label>
                        <select class="form-select" id="garmentStatus">
                            <option value="">Todos</option>
                            <option value="available">Disponible</option>
                            <option value="production">En Producción</option>
                            <option value="completed">Completado</option>
                            <option value="rejected">Rechazado</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="fromDate" class="form-label">Desde</label>
                        <input type="date" class="form-control" id="fromDate">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="toDate" class="form-label">Hasta</label>
                        <input type="date" class="form-control" id="toDate">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9 mb-3">
                        <label for="searchQuery" class="form-label">Buscar</label>
                        <input type="text" class="form-control" id="searchQuery" placeholder="Buscar por modelo, folio, etc.">
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2 w-100">
                            <i class="fas fa-search me-2"></i>Filtrar
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Listado de prendas -->
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card garment-card">
