    <script>
        // Establecer fecha actual por defecto en el modal
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('newGarmentDate').valueAsDate = new Date();

            // Manejar el envío del formulario
            document.getElementById('saveNewGarment').addEventListener('click', function () {
                const form = document.getElementById('addGarmentForm');
                if (form.checkValidity()) {
                    // Simular envío de datos
                    alert('Prenda agregada correctamente');

                    // Aquí iría el código AJAX para enviar los datos al servidor
                    console.log('Datos de la prenda:', {
                        type: document.getElementById('newGarmentType').value,
                        model: document.getElementById('newGarmentModel').value,
                        color: document.getElementById('newGarmentColor').value,
                        size: document.getElementById('newGarmentSize').value,
                        quantity: document.getElementById('newGarmentQuantity').value,
                        date: document.getElementById('newGarmentDate').value,
                        notes: document.getElementById('newGarmentNotes').value
                    });

                    // Cerrar modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('addGarmentModal'));
                    modal.hide();

                    // Limpiar formulario
                    form.reset();
                    document.getElementById('newGarmentDate').valueAsDate = new Date();
                } else {
                    form.reportValidity();
                }
            });
        });
    </script>
