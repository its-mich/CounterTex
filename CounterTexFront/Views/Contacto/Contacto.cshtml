@model CounterTexFront.Models.ContactoViewModel

@{
    ViewBag.Title = "Contacto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Contacto</h2>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto Premium | Counter Tex</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6a11cb;
            --secondary-color: #2575fc;
            --accent-color: #ff4d8d;
            --dark-color: #2c3e50;
            --light-color: #f8f9fa;
            --success-color: #28a745;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
            min-height: 100vh;
            color: var(--dark-color);
            overflow-x: hidden;
        }

        .glass-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.18);
            transition: all 0.3s ease;
        }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(31, 38, 135, 0.15);
        }

        .gradient-bg {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        }

        .contact-header {
            position: relative;
            overflow: hidden;
            border-radius: 0 0 30px 30px;
            padding: 80px 0;
            margin-bottom: -50px;
        }

        .contact-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80') center/cover no-repeat;
            opacity: 0.9;
            z-index: -1;
        }

        .contact-header::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(106, 17, 203, 0.9) 0%, rgba(37, 117, 252, 0.9) 100%);
            z-index: -1;
        }

        .form-control {
            border-radius: 10px;
            padding: 15px 20px;
            border: 2px solid #e9ecef;
            transition: all 0.3s;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(106, 17, 203, 0.25);
        }

        .btn-primary {
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            border: none;
            border-radius: 10px;
            padding: 15px 30px;
            font-weight: 600;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            transition: all 0.3s;
            background-size: 200% auto;
        }

        .btn-primary:hover {
            background-position: right center;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.3);
        }

        .contact-icon {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 20px;
        }

        .feature-card {
            padding: 30px;
            text-align: center;
            transition: all 0.3s;
        }

        .feature-card:hover {
            background: white;
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .floating-label {
            position: relative;
            margin-bottom: 25px;
        }

        .floating-label label {
            position: absolute;
            top: 15px;
            left: 20px;
            color: #6c757d;
            transition: all 0.3s;
            pointer-events: none;
            background: white;
            padding: 0 5px;
        }

        .floating-label input:focus + label,
        .floating-label input:not(:placeholder-shown) + label,
        .floating-label textarea:focus + label,
        .floating-label textarea:not(:placeholder-shown) + label {
            top: -10px;
            left: 15px;
            font-size: 0.8rem;
            color: var(--primary-color);
        }

        .social-links a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: white;
            color: var(--primary-color);
            margin: 0 10px;
            transition: all 0.3s;
        }

        .social-links a:hover {
            transform: translateY(-3px);
            background: var(--primary-color);
            color: white;
        }

        .map-container {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            height: 100%;
        }

        .map-container iframe {
            width: 100%;
            height: 100%;
            min-height: 300px;
            border: none;
        }

        .animated-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -2;
            background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
            opacity: 0.1;
        }

        gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .confirmation-message {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1000;
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
            text-align: center;
            max-width: 500px;
            width: 90%;
        }

        .confirmation-message i {
            font-size: 4rem;
            color: var(--success-color);
            margin-bottom: 20px;
        }

        .loading-spinner {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.8);
            z-index: 999;
            justify-content: center;
            align-items: center;
        }

        .spinner {
            width: 70px;
            height: 70px;
            border: 8px solid #f3f3f3;
            border-top: 8px solid var(--primary-color);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

         (max-width: 768px) {
            .contact-header {
                padding: 50px 0;
                margin-bottom: -30px;
            }

            .feature-card {
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="animated-bg"></div>

    <!-- Header con efecto hero -->
    <header class="contact-header text-white text-center">
        <div class="container">
            <h1 class="display-4 fw-bold mb-4">Contáctanos</h1>
            <p class="lead mb-5">Estamos aquí para ayudarte. Envíanos un mensaje y te responderemos en menos de 24 horas.</p>
            <div class="social-links d-flex justify-content-center">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                <a href="#"><i class="fab fa-whatsapp"></i></a>
            </div>
        </div>
    </header>

    <!-- Contenido principal -->
    <div class="container my-5">
        <div class="row g-5">
            <!-- Sección de información de contacto -->
            <div class="col-lg-4">
                <div class="glass-card p-4 h-100">
                    <div class="text-center mb-5">
                        <i class="fas fa-headset contact-icon"></i>
                        <h3 class="fw-bold mb-3">Información de Contacto</h3>
                        <p class="text-muted">Rellena el formulario o contáctanos directamente a través de estos canales.</p>
                    </div>

                    <div class="contact-info mb-4">
                        <div class="d-flex align-items-start mb-4">
                            <i class="fas fa-map-marker-alt me-3 mt-1 text-primary"></i>
                            <div>
                                <h5 class="fw-bold mb-1">Dirección</h5>
                                <p class="text-muted mb-0">Av. Principal 1234, Ciudad, País</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-start mb-4">
                            <i class="fas fa-phone-alt me-3 mt-1 text-primary"></i>
                            <div>
                                <h5 class="fw-bold mb-1">Teléfono</h5>
                                <p class="text-muted mb-0">+1 (234) 567-8900</p>
                                <p class="text-muted mb-0">+1 (234) 567-8901</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-start mb-4">
                            <i class="fas fa-envelope me-3 mt-1 text-primary"></i>
                            <div>
                                <h5 class="fw-bold mb-1">Correo Electrónico</h5>
                                <p class="text-muted mb-0">contacto@countertex.com</p>
                                <p class="text-muted mb-0">soporte@countertex.com</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-start">
                            <i class="fas fa-clock me-3 mt-1 text-primary"></i>
                            <div>
                                <h5 class="fw-bold mb-1">Horario de Atención</h5>
                                <p class="text-muted mb-0">Lunes a Viernes: 9:00 - 18:00</p>
                                <p class="text-muted mb-0">Sábados: 10:00 - 14:00</p>
                            </div>
                        </div>
                    </div>

                    <div class="map-container mt-4">

                    </div>
                </div>
            </div>

            <!-- Sección del formulario -->
            <div class="col-lg-8">
                <div class="glass-card p-4 p-md-5">
                    <h2 class="fw-bold mb-4 text-center">Formulario de Contacto</h2>
                    <p class="text-center text-muted mb-5">Completa el siguiente formulario y nos pondremos en contacto contigo lo antes posible.</p>

                    <form id="contactForm" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="floating-label">
                                    <input type="text" class="form-control" id="nombre" placeholder=" " required>
                                    <label for="nombre">Nombre Completo</label>
                                    <div class="invalid-feedback">
                                        Por favor ingresa tu nombre.
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="floating-label">
                                    <input type="email" class="form-control" id="email" placeholder=" " required>
                                    <label for="email">Correo Electrónico</label>
                                    <div class="invalid-feedback">
                                        Por favor ingresa un correo electrónico válido.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="floating-label">
                                    <input type="tel" class="form-control" id="telefono" placeholder=" ">
                                    <label for="telefono">Teléfono (Opcional)</label>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="floating-label">
                                    <input type="text" class="form-control" id="asunto" placeholder=" " required>
                                    <label for="asunto">Asunto</label>
                                    <div class="invalid-feedback">
                                        Por favor ingresa el asunto de tu mensaje.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="floating-label">
                                <select class="form-select" id="departamento" required>
                                    <option value="" selected disabled> </option>
                                    <option value="ventas">Departamento de Ventas</option>
                                    <option value="soporte">Soporte Técnico</option>
                                    <option value="facturacion">Facturación</option>
                                    <option value="rrhh">Recursos Humanos</option>
                                    <option value="otros">Otros</option>
                                </select>
                                <label for="departamento">Departamento</label>
                                <div class="invalid-feedback">
                                    Por favor selecciona un departamento.
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="floating-label">
                                <textarea class="form-control" id="mensaje" rows="5" placeholder=" " required></textarea>
                                <label for="mensaje">Tu Mensaje</label>
                                <div class="invalid-feedback">
                                    Por favor escribe tu mensaje.
                                </div>
                            </div>
                        </div>

                        <div class="mb-4 form-check">
                            <input type="checkbox" class="form-check-input" id="privacidad" required>
                            <label class="form-check-label" for="privacidad">Acepto la <a href="#" class="text-primary">Política de Privacidad</a> y el tratamiento de mis datos.</label>
                            <div class="invalid-feedback">
                                Debes aceptar los términos para continuar.
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i> Enviar Mensaje
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Tarjetas de características -->
                <div class="row mt-5">
                    <div class="col-md-4">
                        <div class="feature-card glass-card">
                            <i class="fas fa-shield-alt mb-3 text-primary" style="font-size: 2rem;"></i>
                            <h5 class="fw-bold">Seguridad</h5>
                            <p class="text-muted">Tus datos están protegidos con encriptación de última generación.</p>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="feature-card glass-card">
                            <i class="fas fa-clock mb-3 text-primary" style="font-size: 2rem;"></i>
                            <h5 class="fw-bold">Respuesta Rápida</h5>
                            <p class="text-muted">Garantizamos una respuesta en menos de 24 horas hábiles.</p>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="feature-card glass-card">
                            <i class="fas fa-user-tie mb-3 text-primary" style="font-size: 2rem;"></i>
                            <h5 class="fw-bold">Atención Personalizada</h5>
                            <p class="text-muted">Nuestro equipo especializado resolverá todas tus dudas.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensaje de confirmación -->
    <div class="confirmation-message glass-card">
        <i class="fas fa-check-circle"></i>
        <h3 class="fw-bold mb-3">¡Mensaje Enviado!</h3>
        <p class="mb-4">Gracias por contactarnos. Hemos recibido tu mensaje y nos pondremos en contacto contigo muy pronto.</p>
        <button class="btn btn-primary" onclick="closeConfirmation()">Aceptar</button>
    </div>

    <!-- Spinner de carga -->
    <div class="loading-spinner">
        <div class="spinner"></div>
    </div>

    <!-- Footer -->
    <footer class="gradient-bg text-white py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <h5 class="fw-bold mb-4">Counter Tex</h5>
                    <p>Soluciones innovadoras para tus necesidades textiles. Calidad y servicio desde 2010.</p>
                </div>

                <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-4">Enlaces</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="log in.html" class="text-white text-decoration-none">Inicio</a></li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">Nosotros</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Contacto</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-4">Contacto</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> Av. Principal 1234</li>
                        <li class="mb-2"><i class="fas fa-phone-alt me-2"></i> +1 (234) 567-8900</li>
                        <li class="mb-2"><i class="fas fa-envelope me-2"></i> info@countertex.com</li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h5 class="fw-bold mb-4">Newsletter</h5>
                    <p>Suscríbete para recibir nuestras últimas noticias y ofertas.</p>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="Tu correo">
                        <button class="btn btn-light" type="button">Suscribir</button>
                    </div>
                </div>
            </div>

            <hr class="my-4 bg-light">

            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">&copy; 2023 Counter Tex. Todos los derechos reservados.</p>
                </div>

                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validación del formulario
        (function () {
            'use strict';

            const form = document.getElementById('contactForm');
            const loadingSpinner = document.querySelector('.loading-spinner');
            const confirmationMessage = document.querySelector('.confirmation-message');

            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                } else {
                    event.preventDefault();
                    // Mostrar spinner de carga
                    loadingSpinner.style.display = 'flex';

                    // Simular envío del formulario (en un caso real sería una petición AJAX)
                    setTimeout(function () {
                        loadingSpinner.style.display = 'none';
                        confirmationMessage.style.display = 'block';
                        form.reset();

                        // Remover clases de validación
                        form.classList.remove('was-validated');
                    }, 2000);
                }

                form.classList.add('was-validated');
            }, false);
        })();

        function closeConfirmation() {
            document.querySelector('.confirmation-message').style.display = 'none';
        }

        // Efecto de animación para los elementos al hacer scroll
        document.addEventListener('DOMContentLoaded', function () {
            const animateOnScroll = function () {
                const elements = document.querySelectorAll('.feature-card, .glass-card');

                elements.forEach(element => {
                    const elementPosition = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;

                    if (elementPosition < windowHeight - 100) {
                        element.style.opacity = '1';
                        element.style.transform = 'translateY(0)';
                    }
                });
            };

            // Inicializar elementos con opacidad 0 para la animación
            const animatedElements = document.querySelectorAll('.feature-card, .glass-card');
            animatedElements.forEach(element => {
                element.style.opacity = '0';
                element.style.transform = 'translateY(30px)';
                element.style.transition = 'all 0.6s ease-out';
            });

            // Ejecutar al cargar y al hacer scroll
            animateOnScroll();
            window.addEventListener('scroll', animateOnScroll);
        });
    </script>
</body>
</html>