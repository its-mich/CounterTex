@model CounterTexFront.Models.ConsultarInformacionViewModel

@{
    ViewBag.Title = "Detalle de Prenda";
    Layout = "~/Views/Shared/_LayoutEmpleado.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.0/css/bootstrap.min.css" />
    <style>
        .detalle-card {
            max-width: 600px;
            margin: 50px auto;
            background-color: #f8f9fa;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .detalle-titulo {
            margin-bottom: 20px;
            color: #007bff;
        }

        .detalle-item {
            margin-bottom: 15px;
        }

        .detalle-label {
            font-weight: bold;
        }
    </style>
}

<div class="detalle-card">
    <h2 class="detalle-titulo">Detalle de la Prenda</h2>

    <div class="detalle-item">
        <span class="detalle-label">Nombre:</span> @Model.Nombre
    </div>

    <div class="detalle-item">
        <span class="detalle-label">Género:</span> @Model.Genero
    </div>

    <div class="detalle-item">
        <span class="detalle-label">Color:</span> @Model.Color
    </div>

    @* Puedes agregar más campos aquí si el modelo tiene más propiedades *@

    <a href="@Url.Action("Index", "ConsultarInformacion")" class="btn btn-secondary mt-3">Volver</a>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
}
