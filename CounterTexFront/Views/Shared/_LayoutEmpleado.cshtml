@{
    Layout = null;
    var nombreUsuario = ViewBag.NombreUsuario ?? User.Identity.Name ?? "Empleado";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Panel Empleado</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #1e1e2f;
            color: #F2F2F2;
            margin: 0;
        }

        .admin-sidebar {
            background: linear-gradient(180deg,#2d3a4a 0%, #1a1a1a 100%);
            color: white;
            min-height: 100vh;
            width: 250px;
            position: fixed;
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.3);
            z-index: 1000;
        }

        .sidebar-header {
            padding: 20px;
            text-align: center;
            background-color: rgba(255, 255, 255, 0.05);
        }

        .logo-img {
            width: 80px;
            height: auto;
            margin-bottom: 5px;
        }

        .sidebar-header h4 {
            margin: 0;
            font-weight: bold;
            font-size: 1.3rem;
            color: #ffffff;
        }

        .admin-sidebar .nav-link {
            color: rgba(255, 255, 255, 0.85);
            padding: 12px 20px;
            display: flex;
            align-items: center;
            border-left: 4px solid transparent;
            transition: all 0.3s ease;
        }

            .admin-sidebar .nav-link:hover,
            .admin-sidebar .nav-link.active {
                background-color: rgba(255, 255, 255, 0.08);
                border-left-color: #A0CCF2;
                color: #ffffff;
                text-decoration: none;
            }

            .admin-sidebar .nav-link i {
                margin-right: 12px;
                font-size: 1.2rem;
            }

        .main-content {
            margin-left: 250px;
            padding: 30px;
            background: #1e1e2f;
            min-height: 100vh;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .user-info img {
                width: 45px;
                height: 45px;
                border-radius: 50%;
                border: 2px solid #A0CCF2;
            }

        footer {
            margin-top: 50px;
            text-align: center;
            color: #aaa;
            font-size: 14px;
        }

        .card-dark {
            background-color: #2a2a3c;
            border: none;
            border-radius: 12px;
            color: #F2F2F2;
        }

            .card-dark .card-title {
                color: #A0CCF2;
            }

        .shadow-hover:hover {
            box-shadow: 0 4px 12px rgba(160, 204, 242, 0.3);
            transform: translateY(-3px);
            transition: all 0.3s ease;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="admin-sidebar">
        <div class="sidebar-header">
            <a href="@Url.Action("Index", "Empleado")" style="text-decoration: none;">
                <img src="~/images/logoredondo.png" alt="Logo CounterTex" class="logo-img" />
                <h4>Empleado</h4>
            </a>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "ProduccionDiaria" ? "active" : "")" href="@Url.Action("Index", "ProduccionDiaria")">
                <i class="fas fa-calendar-day"></i> Producción Diaria
            </a>
            <a class="nav-link" href="@Url.Action("Index", "ControlHorarios")">
                <i class="fas fa-clock"></i> Control de Horarios
            </a>
            <a class="nav-link" href="@Url.Action("Chat", "Chat")">
                <i class="fas fa-comments"></i> Chat Interno
            </a>
            <a class="nav-link" href="@Url.Action("Revision", "Revision")">
                <i class="fas fa-clipboard-check"></i> Revisión Prendas
            </a>
            <a class="nav-link" href="@Url.Action("DetallePrenda", "Detalle")">
                <i class="fas fa-info-circle"></i> Detalle Prenda
            </a>
            <a class="nav-link" href="@Url.Action("Asignacion", "Asignacion")">
                <i class="fas fa-tasks"></i> Asignación de Prenda
            </a>
            @using (Html.BeginForm("LogOff", "Auth", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit();">
                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                </a>
            }
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="admin-header">
            <h2>@ViewBag.Title</h2>
            <div class="user-info">
                <img src="https://randomuser.me/api/portraits/women/44.jpg" alt="Empleado" />
                <span>@nombreUsuario</span>
            </div>
        </div>

        @RenderBody()

        <footer>
            &copy; @DateTime.Now.Year - CounterTex Empleado
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
