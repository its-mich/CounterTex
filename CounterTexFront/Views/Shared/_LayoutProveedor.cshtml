@{
    Layout = null;
    var nombreUsuario = ViewBag.NombreUsuario ?? User.Identity.Name ?? "Proveedor";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Panel Proveedor</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #1e2b2e;
            color: #F2F2F2;
            margin: 0;
        }

        .sidebar {
            background-color: #214045;
            color: white;
            width: 230px;
            position: fixed;
            min-height: 100vh;
        }

        .main {
            margin-left: 230px;
            padding: 30px;
            background-color: #1e2b2e;
            min-height: 100vh;
        }

        .sidebar .nav-link {
            color: white;
            padding: 15px;
        }

            .sidebar .nav-link:hover {
                background-color: #2f5b5f;
            }

        .user-info img {
            width: 40px;
            border-radius: 50%;
            border: 2px solid #A0CCF2;
        }

        footer {
            background-color: rgba(15, 23, 42, 0.85);
            padding: 20px 0;
            font-size: 0.9rem;
            color: #F2F2F2;
        }

        .social-icon {
            color: #A0CCF2;
            font-size: 26px;
            margin: 0 12px;
            transition: transform 0.4s ease, color 0.4s ease;
        }

            .social-icon:hover {
                transform: scale(1.4) rotate(10deg);
                color: #ffffff;
            }

        a {
            color: #A0CCF2;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="text-center p-3">
            <img src="~/images/logoredondo.png" alt="Logo" class="img-fluid" style="max-width: 70px;" />
            <h5>Proveedor</h5>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link" href="@Url.Action("Index", "ControlPrendas")"><i class="fas fa-box"></i> Prendas Entregadas</a>
            <a class="nav-link" href="@Url.Action("Index", "Contacto")"><i class="fas fa-dollar-sign"></i> Pagos</a>
            <a class="nav-link" href="@Url.Action("Chat", "Chat")"><i class="fas fa-comments"></i> Soporte</a>
            @using (Html.BeginForm("LogOff", "Auth", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <a class="nav-link" href="javascript:this.closest('form').submit();"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a>
            }
        </nav>
    </div>

    <div class="main">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@ViewBag.Title</h2>
            <div class="user-info d-flex align-items-center gap-2">
                <img src="https://randomuser.me/api/portraits/women/48.jpg" />
                <span>@nombreUsuario</span>
            </div>
        </div>

        @RenderBody()

    <footer>
        <div class="social-media text-center my-2">
            <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
            <a href="#" class="social-icon"><i class="fab fa-google"></i></a>
            <a href="mailto:countertex@gmail.com" class="social-icon"><i class="fas fa-envelope"></i></a>
            <br />
            <a href="mailto:countertex@gmail.com" class="d-block mt-2">Contacto vía Email</a>
        </div>
    </footer>
    </div>
</body>
</html>