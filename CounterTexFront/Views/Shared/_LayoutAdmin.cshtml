@{
    Layout = null;
    var nombreUsuario = User.Identity.Name ?? "Administrador";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Panel Administrador</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fb;
        }

        .admin-sidebar {
            background: linear-gradient(180deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            min-height: 100vh;
            width: 250px;
            position: fixed;
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

            .admin-sidebar .sidebar-header {
                padding: 20px;
                background: rgba(0, 0, 0, 0.1);
            }

            .admin-sidebar .nav-link {
                color: rgba(255, 255, 255, 0.9);
                padding: 12px 20px;
                display: flex;
                align-items: center;
                border-left: 4px solid transparent;
                transition: all 0.3s;
            }

                .admin-sidebar .nav-link:hover,
                .admin-sidebar .nav-link.active {
                    background-color: rgba(255, 255, 255, 0.1);
                    border-left-color: #ff4d8d;
                    color: white;
                    text-decoration: none;
                }

                .admin-sidebar .nav-link i {
                    margin-right: 10px;
                }

        .main-content {
            margin-left: 250px;
            padding: 30px;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .user-info img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
            }

        footer {
            margin-top: 50px;
            text-align: center;
            color: #888;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="admin-sidebar">
        <div class="sidebar-header text-center">
            <h4>CounterTex</h4>
        </div>

        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "ProduccionDiaria" ? "active" : "")" href="@Url.Action("ProduccionDiaria", "ProduccionDiaria")">
                <i class="fas fa-calendar-day"></i> Producción Diaria
            </a>
            <a class="nav-link" href="@Url.Action("Index", "ControlHorarios")">
                <i class="fas fa-clock"></i> Control de Horarios
            </a>
            <a class="nav-link" href="@Url.Action("ProduccionMensual", "ProduccionMensual")">
                <i class="fas fa-chart-line"></i> Producción Mensual
            </a>
            <a class="nav-link" href="@Url.Action("ControlPrendas", "ControlPrendas")">
                <i class="fas fa-tshirt"></i> Control de Prendas
            </a>
            <a class="nav-link" href="@Url.Action("Contacto", "Contacto")">
                <i class="fas fa-money-bill-wave"></i> Control de Pagos
            </a>
            <a class="nav-link" href="@Url.Action("Chat", "Chat")">
                <i class="fas fa-comments"></i> Chat Interno
            </a>
            <a class="nav-link" href="@Url.Action("Revision", "Revision")">
                <i class="fas fa-check-circle"></i> Revisión Prendas
            </a>
            <a class="nav-link" href="@Url.Action("Asignacion", "Asignacion")">
                <i class="fas fa-tasks"></i> Asignación de Prendas
            </a>
            @using (Html.BeginForm("LogOff", "Auth", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit();">
                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                </a>
            }
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="admin-header">
            <h2>@ViewBag.Title</h2>
            <div class="user-info">
                <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Admin" />
                <span>@nombreUsuario</span>
            </div>
        </div>

        @RenderBody()

        <footer>
            &copy; @DateTime.Now.Year - CounterTex Admin
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
