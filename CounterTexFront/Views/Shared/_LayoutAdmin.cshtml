@{
    Layout = null;
    var nombreUsuario = ViewBag.NombreUsuario ?? User.Identity.Name ?? "Administrador";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Panel Administrador</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #1e1e2f;
            color: #F2F2F2;
            margin: 0;
        }

        .admin-sidebar {
            background: linear-gradient(180deg,#2d3a4a 0%, #1a1a1a 100%);
            color: white;
            min-height: 100vh;
            width: 250px;
            position: fixed;
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.3);
            z-index: 1000;
        }

        .sidebar-header {
            color: white;
            text-decoration: none;

            padding: 20px;
            text-align: center;
            background-color: rgba(255, 255, 255, 0.05);
        }
        .logo-img {
            width: 80px;
            height: auto;
            margin-bottom: 5px;
        }
        .sidebar-profile {
            background-color: rgba(255, 255, 255, 0.03);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

            .sidebar-profile .admin-img {
                width: 70px;
                height: 70px;
                border-radius: 50%;
                border: 2px solid #A0CCF2;
                object-fit: cover;
            }

            .sidebar-header img {
                width: 80px;
                height: auto;
                margin-bottom: 10px;
            }

            .sidebar-header h4 {
                margin: 0;
                font-weight: bold;
                font-size: 1.3rem;
                color: #ffffff;
            }

        .admin-sidebar .nav-link {
            color: rgba(255, 255, 255, 0.85);
            padding: 12px 20px;
            display: flex;
            align-items: center;
            border-left: 4px solid transparent;
            transition: all 0.3s ease;
        }

            .admin-sidebar .nav-link:hover,
            .admin-sidebar .nav-link.active {
                background-color: rgba(255, 255, 255, 0.08);
                border-left-color: #A0CCF2;
                color: #ffffff;
                text-decoration: none;
            }

            .admin-sidebar .nav-link i {
                margin-right: 12px;
                font-size: 1.2rem;
            }

        .main-content {
            margin-left: 250px;
            padding: 30px;
            background: #1e1e2f;
            min-height: 100vh;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .user-info img {
                width: 45px;
                height: 45px;
                border-radius: 50%;
                border: 2px solid #A0CCF2;
            }

        footer {
            background-color: rgba(15, 23, 42, 0.85);
            padding: 20px 0;
            font-size: 0.9rem;
            color: #F2F2F2;
        }

        .social-icon {
            color: #A0CCF2;
            font-size: 26px;
            margin: 0 12px;
            transition: transform 0.4s ease, color 0.4s ease;
        }

            .social-icon:hover {
                transform: scale(1.4) rotate(10deg);
                color: #ffffff;
            }

        a {
            color: #A0CCF2;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .card-dark {
            background-color: #2a2a3c;
            border: none;
            border-radius: 12px;
            color: #F2F2F2;
        }

            .card-dark .card-title {
                color: #A0CCF2;
            }

        .shadow-hover:hover {
            box-shadow: 0 4px 12px rgba(160, 204, 242, 0.3);
            transform: translateY(-3px);
            transition: all 0.3s ease;
        }

        /*.admin-sidebar .nav-link:hover,
        .admin-sidebar .nav-link.active {
            background-color: rgba(255, 255, 255, 0.08);
            border-left-color: #A0CCF2;
            color: #ffffff;
            text-shadow: 0 0 8px rgba(160, 204, 242, 0.8);
            transition: all 0.2s ease-in-out;
        }*/
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="admin-sidebar">
        <div class="sidebar-header">
            <a href="@Url.Action("Index", "Administrador")" style="text-decoration: none;">
                <img src="~/images/logoredondo.png" alt="Logo CounterTex" class="logo-img" />
                <h3>Administrador</h3>
            </a>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "ProduccionDiaria" ? "active" : "")"
               href="@Url.Action("Index", "ProduccionDiaria")">
                <i class="fas fa-calendar-day"></i> Producción Diaria
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "ControlHorarios" ? "active" : "")"
               href="@Url.Action("Index", "ControlHorarios")">
                <i class="fas fa-clock"></i> Control de Horarios
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "ResumenProduccion" ? "active" : "")"
               href="@Url.Action("Index", "ResumenProduccion")">
                <i class="fas fa-chart-bar"></i> Resumen Producción Mensual
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "ControlPrendas" ? "active" : "")"
               href="@Url.Action("Index", "ControlPrendas")">
                <i class="fas fa-tshirt"></i> Control de Prendas
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Contacto" ? "active" : "")"
               href="@Url.Action("Contacto", "Contacto")">
                <i class="fas fa-money-bill-wave"></i> Control de Pagos
            </a>

            <span id="chatNotificacionWrapper">
                @Html.Partial("_ChatAccess")
            </span>

            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Revision" ? "active" : "")"
               href="@Url.Action("Index", "Revision")">
                <i class="fas fa-check-circle"></i> Revisión Prendas
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Asignacion" ? "active" : "")"
               href="@Url.Action("Index", "Asignacion")">
                <i class="fas fa-tasks"></i> Asignación de Prendas
            </a>

            <!-- Opciones administrativas solo para administradores -->
            @if (ViewBag.EsAdmin == true)
            {
                <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "CambiarRol" ? "active" : "")"
                   href="@Url.Action("CambiarRol", "Administrador")">
                    <i class="fas fa-user-cog"></i> Cambiar Rol
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "EliminarUsuario" ? "active" : "")"
                   href="@Url.Action("EliminarUsuario", "Administrador")">
                    <i class="fas fa-user-slash"></i> Eliminar Usuario
                </a>
            }

            <!-- Cerrar sesión -->
            @using (Html.BeginForm("LogOff", "Auth", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit();">
                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                </a>
            }
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="admin-header">
            <h2>@ViewBag.Title</h2>
            <div class="user-info">
                <img src="https://randomuser.me/api/portraits/men/40.jpg" alt="Admin" />
                <span>@nombreUsuario</span>
            </div>
        </div>

        <!-- Contenido adicional -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card card-dark shadow-hover p-3">
                    <div class="card-body">
                        <h5 class="card-title">Prendas Diarias</h5>
                        <p class="card-text display-6">124</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-dark shadow-hover p-3">
                    <div class="card-body">
                        <h5 class="card-title">Producción Mensual</h5>
                        <p class="card-text display-6">2.312</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-dark shadow-hover p-3">
                    <div class="card-body">
                        <h5 class="card-title">Turnos Activos</h5>
                        <p class="card-text display-6">3</p>
                    </div>
                </div>
            </div>
        </div>

        @RenderBody()

        <footer>
            <div class="social-media text-center my-2">
                <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                <a href="#" class="social-icon"><i class="fab fa-google"></i></a>
                <a href="mailto:countertex@gmail.com" class="social-icon"><i class="fas fa-envelope"></i></a>
                <br />
                <a href="mailto:countertex@gmail.com" class="d-block mt-2">Contacto vía Email</a>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
const chatUserId = @((Session["Usuario"] as CounterTexFront.Models.LoginResponse)?.Id ?? 0);

function revisarNuevosMensajes() {
    if (chatUserId === 0) return;

    // Solicitamos mensajes donde el usuario actual es destinatario (remitenteId = 0)
    $.get(`/Chat/ObtenerMensajes?remitenteId=0&destinatarioId=${chatUserId}`, function (data) {
        const lastCount = parseInt(sessionStorage.getItem("chatLastCount") || "0");
        const nuevos = data.length;

        if (nuevos > lastCount) {
            $("#chatBadge").removeClass("d-none");
        }

        sessionStorage.setItem("chatLastCount", nuevos);
    });
}

// Ocultar la notificación si estás en la vista del chat
if (window.location.pathname.toLowerCase().includes("/chat")) {
    $("#chatBadge").addClass("d-none");
}

// Ejecutar revisión cada 5 segundos
setInterval(revisarNuevosMensajes, 5000);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
