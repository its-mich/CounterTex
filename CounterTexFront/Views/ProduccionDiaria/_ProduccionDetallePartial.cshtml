@model CounterTexFront.Models.ProduccionDetalleViewModel
@{
    var index = ViewData["index"] ?? 0;
    var operaciones = ViewData["operaciones"] as IEnumerable<CounterTexFront.Models.OperacionViewModel>;
}

<div class="form-group row">
    <div class="col-md-6">
        @Html.Label($"ProduccionDetalles[{index}].OperacionId", "Operación", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownList($"ProduccionDetalles[{index}].OperacionId",
            new SelectList(operaciones, "Id", "Nombre"),
            "-- Seleccione --",
            new { @class = "form-control" })
        @Html.ValidationMessage($"ProduccionDetalles[{index}].OperacionId", null, new { @class = "text-danger" })
    </div>
    <div class="col-md-4">
        @Html.Label($"ProduccionDetalles[{index}].Cantidad", "Cantidad", htmlAttributes: new { @class = "control-label" })
        @Html.TextBox($"ProduccionDetalles[{index}].Cantidad", Model.Cantidad, new { @class = "form-control", type = "number", min = "1" })
        @Html.ValidationMessage($"ProduccionDetalles[{index}].Cantidad", null, new { @class = "text-danger" })
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="button" class="btn btn-danger remove-detalle">Quitar</button>
    </div>
</div>