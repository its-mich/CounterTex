
@{
    ViewBag.Title = "DetallesPrendaEmpleado";
    Layout = "~/Views/Shared/_LayoutEmpleado.cshtml";


    //Layout = ViewBag.Layout;

}
@model CounterTexFront.Models.DetallesPrendaEmpleadoViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles de Prenda - Admin Master</title>
    <!-- Bootstrap CSS -->


 
</head>
<body>


  
        <div class="form-section">
            <h4><i class="fas fa-info-circle me-2"></i>Detalles de Prenda</h4>

            <form id="prendaForm">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="color" class="form-label">Color</label>
                        <select class="form-select" id="color" required>
                            <option value="" selected disabled>Seleccionar color</option>
                            <option value="rojo">Rojo</option>
                            <option value="azul">Azul</option>
                            <option value="verde">Verde</option>
                            <option value="negro">Negro</option>
                            <option value="blanco">Blanco</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="tipoPrenda" class="form-label">Tipo de Prenda</label>
                        <select class="form-select" id="tipoPrenda" required>
                            <option value="" selected disabled>Seleccionar tipo</option>
                            <option value="camisa">Camisa</option>
                            <option value="pantalon">Pantalón</option>
                            <option value="vestido">Vestido</option>
                            <option value="chaqueta">Chaqueta</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="modelo" class="form-label">Modelo</label>
                        <input type="text" class="form-control" id="modelo" placeholder="Ingrese el modelo" required>
                    </div>
                    <div class="col-md-6">
                        <label for="folio" class="form-label">Folio</label>
                        <input type="text" class="form-control" id="folio" placeholder="Ingrese el folio" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="operacion" class="form-label">Tipo de Operación</label>
                        <select class="form-select" id="operacion" required>
                            <option value="" selected disabled>Seleccionar operación</option>
                            <option value="corte">Corte</option>
                            <option value="costura">Costura</option>
                            <option value="planchado">Planchado</option>
                            <option value="empaque">Empaque</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="cantidad" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" id="cantidad" min="1" value="1" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="observaciones" class="form-label">Observaciones</label>
                    <textarea class="form-control" id="observaciones" rows="3" placeholder="Ingrese observaciones adicionales"></textarea>
                </div>

                <hr>

                <h5 class="mb-3"><i class="fas fa-save me-2"></i>Guardar Producción</h5>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Prendas</label>
                        <div class="form-control" id="prendaSummary">-</div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Color</label>
                        <div class="form-control" id="colorSummary">-</div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Modelo</label>
                        <div class="form-control" id="modeloSummary">-</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Talla</label>
                        <select class="form-select" id="talla">
                            <option value="S">S</option>
                            <option value="M" selected>M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Operación</label>
                        <div class="form-control" id="operacionSummary">-</div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Cantidad</label>
                        <div class="form-control" id="cantidadSummary">-</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="fecha" class="form-label">Fecha</label>
                        <input type="date" class="form-control" id="fecha" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="efecto" class="form-label">Efecto</label>
                        <select class="form-select" id="efecto">
                            <option value="normal">Normal</option>
                            <option value="lavado">Lavado</option>
                            <option value="teñido">Teñido</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="acabado" class="form-label">Acabado</label>
                        <select class="form-select" id="acabado">
                            <option value="estandar">Estándar</option>
                            <option value="premium">Premium</option>
                            <option value="personalizado">Personalizado</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" id="btnCancelar">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary" id="btnGuardar">
                        <i class="fas fa-save me-2"></i>Guardar Producción
                    </button>
                </div>
            </form>
        </div>

        <!-- Resumen de Prendas Rechazadas -->
        <div class="form-section">
            <h4><i class="fas fa-exclamation-triangle me-2"></i>Prendas Rechazadas</h4>
            <div class="alert alert-warning">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-circle fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="alert-heading">37 Prendas Rechazadas</h4>
                        <p class="mb-0">Revise los criterios de calidad para reducir este número.</p>
                    </div>
                    <button class="btn btn-sm btn-outline-warning">Ver Detalles</button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Folio</th>
                            <th>Modelo</th>
                            <th>Defecto</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>PR-10025</td>
                            <td>Camisa M</td>
                            <td>Corte irregular</td>
                            <td>15/05/2023</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary">Revisar</button>
                            </td>
                        </tr>
                        <tr>
                            <td>PR-10024</td>
                            <td>Pantalón L</td>
                            <td>Costura desalineada</td>
                            <td>15/05/2023</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary">Revisar</button>
                            </td>
                        </tr>
                        <tr>
                            <td>PR-10023</td>
                            <td>Vestido S</td>
                            <td>Mancha de tinta</td>
                            <td>14/05/2023</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary">Revisar</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // Actualizar resumen en tiempo real
        document.getElementById('color').addEventListener('change', updateSummary);
        document.getElementById('tipoPrenda').addEventListener('change', updateSummary);
        document.getElementById('modelo').addEventListener('input', updateSummary);
        document.getElementById('operacion').addEventListener('change', updateSummary);
        document.getElementById('cantidad').addEventListener('input', updateSummary);

        function updateSummary() {
            document.getElementById('prendaSummary').textContent =
                document.getElementById('tipoPrenda').value || '-';
            document.getElementById('colorSummary').textContent =
                document.getElementById('color').value || '-';
            document.getElementById('modeloSummary').textContent =
                document.getElementById('modelo').value || '-';
            document.getElementById('operacionSummary').textContent =
                document.getElementById('operacion').value || '-';
            document.getElementById('cantidadSummary').textContent =
                document.getElementById('cantidad').value || '-';
        }

        // Establecer fecha actual por defecto
        document.getElementById('fecha').valueAsDate = new Date();

        // Manejar envío del formulario
        document.getElementById('prendaForm').addEventListener('submit', function (e) {
            e.preventDefault();

            // Validación adicional
            if (!document.getElementById('color').value ||
                !document.getElementById('tipoPrenda').value) {
                alert('Por favor complete todos los campos requeridos');
                return;
            }

            // Simular envío de datos
            alert('Producción guardada exitosamente');

            // Aquí iría el código AJAX para enviar los datos al servidor
            console.log('Datos a enviar:', {
                color: document.getElementById('color').value,
                tipoPrenda: document.getElementById('tipoPrenda').value,
                modelo: document.getElementById('modelo').value,
                folio: document.getElementById('folio').value,
                operacion: document.getElementById('operacion').value,
                cantidad: document.getElementById('cantidad').value,
                observaciones: document.getElementById('observaciones').value,
                talla: document.getElementById('talla').value,
                fecha: document.getElementById('fecha').value,
                efecto: document.getElementById('efecto').value,
                acabado: document.getElementById('acabado').value
            });
        });

        // Manejar botón cancelar
        document.getElementById('btnCancelar').addEventListener('click', function () {
            if (confirm('¿Está seguro que desea cancelar? Los datos no guardados se perderán.')) {
                // Limpiar formulario
                document.getElementById('prendaForm').reset();
                updateSummary();
            }
        });

        // Actualizar summary al cargar la página
        updateSummary();
    </script>
</body>
</html>
