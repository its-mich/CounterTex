@model CounterTexFront.Models.EditarNombreViewModel

@{
    ViewBag.Title = "Editar Nombre";
    Layout = "~/Views/Shared/_LayoutEmpleado.cshtml";
}


<!-- Mensajes -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card p-4 shadow-sm" style="max-width: 400px;">
    @using (Html.BeginForm("EditarNombre", "Usuarios", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Nombres)
            @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nombres, null, new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
    }
</div>
